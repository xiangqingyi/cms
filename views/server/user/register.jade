extends ../layout-blank

block content
    //- .container
        .row
            .register
                form(action='', method='post')
                    h2 注册
                    .form-group
                        label 用户名
                        input.form-control(name='username')
                    .form-group
                        label 密码
                        input.form-control(type='password', name='password')
                    .form-group
                        label 姓名
                        input.form-control(name='name')
                    .form-group
                        label Email
                        input.form-control(name='email')
                    input(type='hidden', name='_csrf', value='#{token}')
                    button.btn.btn-primary(type='submit') 提交
                    | 
                    a(href='#{adminDir}/user/login') 登录
    section#login-container
        .row
            #login-wrapper.col-md-3
                .panel.panel-primary
                    .panel-heading
                        h3.panel-title
                            | 注册
                    .panel-body
                        p
                            | 已经是用户? 
                            a(href='pages-login.html')
                                strong 登录
                        form(role='form', action='', method='post')
                            .form-group
                                label(for='J_username') *用户名
                                input#J_username.form-control(type='text', name='username', placeholder='请输入用户名', autofocus)
                            .form-group
                                label(for='J_password') *密码
                                input#J_password.form-control(type='password', name='password', placeholder='请输入密码')
                            .form-group
                                label(for="J_name") *姓名
                                input#J_name.form-control(type="text", name="name", placeholder="请输入姓名")
                            .form-group
                                label(for="J_address") *地址
                                input#J_address.form-control(type="text", name="address", placeholder="请输入地址")
                            .form-group
                                label(for="J_birthday")
                                input#J_birthday.form-control(type="date", name="birthday", placeholder="请输入生日")
                            input(type='hidden', name='_csrf', value='#{token}')
                            button.btn.btn-primary.btn-block(type='submit') 注册

